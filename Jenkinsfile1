pipeline{
  agent any
  stages{
        stage('Build'){
            steps{
                script{
                def mvnHome = "/opt/maven/apache-maven-3.9.4"
                env.PATH = "${mvnHome}/bin:${env.PATH}"
                sh '''
                mvn clean package
                '''
                }
            }
        }
        stage('Sonar'){
          steps{
            sh 'mvn sonar:sonar'
          }
        }
  }
}